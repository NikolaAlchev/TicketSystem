<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&family=Montserrat:wght@900&display=swap" rel="stylesheet">
    <link href="~/fontawesome-free-6.4.2-web/css/all.min.css" rel="stylesheet" />
    <script src="~/Scripts/ShowPassword.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
    <style>
        * {
            margin: 0;
            padding: 0;
            font-family: 'Montserrat', sans-serif;
        }

        body {
            background: url('../../images/bacground1.jpg') center center no-repeat fixed;
            background-size: cover;
            position: relative;
            overflow: hidden;
            width: 100%;
            height:100vh;
        }

        #logo-1 {
            position: absolute;
            left: 50px;
            top: 30px;
            color: white;
            width: 250px;
        }
        #link {
            width: 180px;
            height: 40px;
            text-decoration: none;
            color: white;
            position: absolute;
            right: 50px;
            text-align: right;
            font-size: 23px !important;
            font-weight: 900 !important;
            text-shadow: 2px 2px 3px #000000;
            top: 20px;
        }
            #link i {
                margin-left: 5px;
            }
            #link:hover {
                color: white;
                cursor: pointer;
            }
            @@media (max-width: 1600px) {
                #logo-1 {

                width: 200px;
            }
        }
        
    </style>
</head>
<body onbeforeunload="BClose()">

    <img id="logo-1" src="~/Images/Logo1.png" alt="БИГОРСКИ" />
    @Html.Partial("_LoginPartial")
    @RenderBody()


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

@section Scripts{
    <script>
        window.onbeforeunload = function BClose() {
            return "Do you rly want to close";
        }
