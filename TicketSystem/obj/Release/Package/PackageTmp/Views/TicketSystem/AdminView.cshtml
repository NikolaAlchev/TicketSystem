                        $('#table-reports_previous a').append('<i class="fa-solid fa-circle-chevron-left" style="color: #a39b9b;"></i>');
                        $('#table-reports_next a').text("");
                        $('#table-reports_next a').append('<i class="fa-solid fa-circle-chevron-right" style="color: #a39b9b;"></i>');
                    });
                }
            });
        }

        function changePrice() {
            val = parseInt(document.getElementById('price-input').value);
            $.ajax({
                url: "TicketSystem/ChangeCurrentPrice",
                method: "GET",
                data: {
                    price: val
                },
                success: function (response) {
                    $("#content").html(response);
                }
            });
        }
    </script>
}
