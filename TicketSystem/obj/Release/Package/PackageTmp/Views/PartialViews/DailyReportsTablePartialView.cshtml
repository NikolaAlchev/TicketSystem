
@model IEnumerable<TicketSystem.Models.Ticket>

<table id="table-reports" cellspacing="0">
    <thead>
        <tr>
            <td>Датум</td>
            <td>Цена</td>
            <td>Група</td>
            <td>Бр. на луѓе</td>
        </tr>
    </thead>
    <tbody>
        @foreach (TicketSystem.Models.Ticket item in Model)
        {
            <tr>
                <td>@item.DateOfCreation.ToString("HH:mm:ss")</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>
                    @if (item.Group == true)
                    {
                        <span>Да</span>
                    }
                    else
                    {
                        <span>Не</span>
                    }
                </td>
                <td>@Html.DisplayFor(modelItem => item.NumOfPeople)</td>
            </tr>
        }

    </tbody>
</table>